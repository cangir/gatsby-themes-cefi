{
  "name": "@cangir/gatsby-themes",
  "description": "A collection of free themes for Gatsby",
  "author": "cangir <contact@ahmetcangir.com>",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "core/*",
    "examples/*",
    "plugins/*",
    "starters/*",
    "themes/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "release": "lerna publish && npm run sync",
    "sync": "npm run sync:starters && npm run sync:examples",
    "sync:starters": "./scripts/sync.sh \"starters/*\"",
    "sync:examples": "./scripts/sync.sh \"examples/*\"",
    "themes:tablex": "yarn workspace @cangir/gatsby-theme-tablex",
    "starters:tablex": "yarn workspace @cangir/gatsby-starter-tablex",
    "examples:tablex": "yarn workspace examples/gatsby-example-tablex"
  },
  "repository": {
		"type": "git",
		"url": "git+https://github.com/cangir/gatsby-themes.git"
	},
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "husky": "4.2.3",
    "lerna": "3.20.2",
    "prettier": "1.19.1"
  },
  "dependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
